{
  "name": "klinky",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kripple/klinky.git"
  },
  "license": "MIT",
  "author": "Kelly Ripple",
  "type": "module",
  "scripts": {
    "lint": "eslint . && stylelint '**/*.css' && prettier --check .",
    "test": "playwright test --config config/playwright.config.ts",
    "e2e": "dotenvx run -f .env.development -- playwright test --config config/playwright.e2e-config.ts",
    "build": "npm run build:app && npm run build:api",
    "generate:db": "drizzle-kit generate --config config/drizzle.config.ts",
    "migrate:db": "dotenvx run -f .env.development -- npm run deploy:db",
    "deploy:db": "drizzle-kit migrate --config config/drizzle.config.ts",
    "start": "vite",
    "build:app": "tsc -p tsconfig.frontend.json && vite build",
    "preview:app": "vite preview",
    "api": "npm run build:api && npm run start:api",
    "build:api": "rm -rf netlify && tsc -p tsconfig.backend.json && vite build --config vite.backend-config.ts",
    "start:api": "dotenvx run -f .env.development -- netlify dev --verbose",
    "login": "netlify login",
    "deploy:api": "netlify env:import .env && netlify deploy --prod"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@netlify/edge-functions": "^2.15.4",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.11",
    "daisyui": "^5.0.50",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.12",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "tailwindcss": "^4.1.11",
    "urlpattern-polyfill": "^10.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.1",
    "@netlify/edge-handler-types": "^0.34.1",
    "@playwright/test": "^1.53.0",
    "@types/node": "^22.15.34",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@vitejs/plugin-react": "^4.5.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "8.56.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "netlify-cli": "^23.1.1",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "stylelint": "^16.18.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
